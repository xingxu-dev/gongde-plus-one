.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #F5E6D3;
  padding: 20px;
}

.counter {
  margin-bottom: 40px;
}

.counter-text {
  font-size: 24px;
  color: #8B4513;
  font-weight: bold;
  font-family: "楷体", KaiTi, serif;
}

.wooden-fish-container {
  width: 300px;
  height: 300px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wooden-fish {
  width: 100%;
  height: 100%;
  transition: transform 0.1s ease;
}

.wooden-fish-active {
  transform: scale(0.95);
} 