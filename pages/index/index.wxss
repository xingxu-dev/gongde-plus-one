page, .container {
  background: #000;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.main-title {
  margin-top: 32px;
  font-size: 32px;
  font-weight: bold;
  color: #a86a2c;
  letter-spacing: 2px;
  text-align: center;
}

.sub-title {
  font-size: 14px;
  color: #b0b0b0;
  margin-bottom: 32px;
  text-align: center;
}

.wooden-fish-container {
  width: 320px;
  height: 320px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16px;
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 24px rgba(90, 58, 27, 0.08);
}

.wooden-fish {
  width: 90%;
  height: 90%;
  border-radius: 50%;
  transition: transform 0.1s ease;
}

.wooden-fish-active {
  transform: scale(0.95);
}

.gongde {
  font-size: 22px;
  color: #a86a2c;
  font-weight: bold;
  margin: 24px 0 12px 0;
  text-align: center;
}
.gongde-num {
  font-size: 28px;
  color: #a86a2c;
  font-weight: bold;
}

.button-group {
  display: flex;
  justify-content: center; /* 让按钮在容器内部水平居中 */
  align-items: center;     /* 如果按钮高度不同，垂直居中它们 */
  gap: 16px;               /* 按钮之间的间距 */
  margin: 24px 0 32px 0; /* 上下外边距，左右自动 */
  width: 100%;             /* 关键：宽度充满父容器 */
  max-width: 700px;        /* 可选：限制最大宽度，保持内容不过宽 */
}
.button {
   /* 保持其他样式，如 background, color, border-radius, box-shadow 等 */
  background: #a86a2c;
  color: #fff;
  border: none;
  border-radius: 8px;
  padding: 10px 24px; /* 调整padding */
  font-size: 16px;
  /* width: auto;  或者flex: 1 都可以，根据需要让按钮自适应或固定大小 */
  /* flex-shrink: 0; 让按钮不要被过度挤压 */
  box-shadow: 0 2px 8px rgba(90, 58, 27, 0.08);
  text-align: center; /* 按钮内文本居中 */
  display: flex; /* 如果按钮内有图标或复杂内容，确保它们居中 */
  align-items: center;
  justify-content: center;
}
.button:active {
  background: #8d5c2c;
}
.iconfont {
  font-size: 18px;
  margin-right: 6px;
}

.info-card {
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 4px 24px rgba(90, 58, 27, 0.08);
  max-width: 700px;
  margin: 0 auto 32px auto;
  padding: 24px 32px;
}
.info-card-title {
  color: #a86a2c;
  font-weight: bold;
  font-size: 18px;
  margin-bottom: 12px;
}
.info-card-content {
  color: #222;
  font-size: 15px;
  line-height: 1.8;
}

.card-list {
  display: flex;
  justify-content: center;
  gap: 24px;
  margin-bottom: 32px;
  flex-wrap: nowrap;
  width: 100%;
  max-width: 700px;
}
.card {
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 8px rgba(90, 58, 27, 0.06);
  padding: 18px 12px;
  min-width: 0;
  flex: 1;
  text-align: center;
  margin-bottom: 12px;
  flex-shrink: 1;
}
.card-icon {
  font-size: 32px;
  margin-bottom: 8px;
  color: #a86a2c;
}
.card-title {
  font-weight: bold;
  color: #a86a2c;
  margin-bottom: 6px;
}
.card-desc {
  color: #222;
  font-size: 14px;
}

.footer {
  text-align: center;
  color: #b0b0b0;
  font-size: 14px;
  margin-bottom: 24px;
}